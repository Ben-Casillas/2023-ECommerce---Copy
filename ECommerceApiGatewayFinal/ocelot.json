{
  "Routes": [
    {
      "ServiceName": "ECommerceItemServiceAPI",
      "DownstreamPathTemplate": "/{everything}",
      "UpstreamPathTemplate": "/itemserviceapi/{everything}",
      "UpstreamHttpMethod": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ],
      "FileCacheOptions": {
        "TtlSeconds": 15
      },
      "LoadBalancerOptions": {
        "Type": "LeastConnection",
        "Key": null,
        "Expiry": 0
      }
    },
    {
      "ServiceName": "ECommerceBasketServiceAPI",
      "DownstreamPathTemplate": "/{everything}",
      "UpstreamPathTemplate": "/basketserviceapi/{everything}",
      "UpstreamHttpMethod": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ],
      "FileCacheOptions": {
        "TtlSeconds": 15
      },
      "LoadBalancerOptions": {
        "Type": "LeastConnection",
        "Key": null,
        "Expiry": 0
      }
    },
    {
      "ServiceName": "ECommerceOrderServiceAPI",
      "DownstreamPathTemplate": "/{everything}",
      "UpstreamPathTemplate": "/orderserviceapi/{everything}",
      "UpstreamHttpMethod": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ],
      "FileCacheOptions": {
        "TtlSeconds": 15
      },
      "LoadBalancerOptions": {
        "Type": "LeastConnection",
        "Key": null,
        "Expiry": 0
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://ECommerceAPIGatewayOcelot:80",
    "RequestIdKey": "OcRequestId",
    "DownstreamScheme": "http",
    "ReRoutesCaseSensitive": false,
    "UseServiceDiscovery": true,
    "ServiceDiscoveryProvider": {
      "Host": "ECommerceEurekaRegistry",
      "Port": 8761,
      "Type": "Eureka"
    }
  }
}